<div class="container one-movie">
    <div class="row">
        <div class="col-md-2">
            <img src="{{image}}" alt="Cartel Movie">
        </div>
        <div class="col-md-5">
            <a href="/movies">Go Back</a>
            <h2>{{title}}</h2>
            <h3>Director:{{director}}</h3>
            <p>Star:</p>
            <ul>
                {{#each stars}}
                <li> {{this}}</li>
                {{/each}}
            </ul>

            <p>{{description}}</p>
            <p>
                {{#each showtimes}}
                {{this}} ||
                {{/each}}
            </p>
        </div>

    </div>
</div>